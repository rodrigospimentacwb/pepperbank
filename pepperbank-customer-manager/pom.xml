<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.pepper.bank</groupId>
        <artifactId>pepperbank</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>pepperbank-customer-manager</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>pepperbank-customer-manager</name>
    <description>Modulo de manutencao de clientes</description>

    <dependencies>
        <!-- DEPENDENCIAS INTERNAS -->
        <dependency>
            <groupId>com.pepper.bank</groupId>
            <artifactId>pepperbank-repository</artifactId>
        </dependency>
        <dependency>
            <groupId>com.pepper.bank</groupId>
            <artifactId>pepperbank-exception-handler</artifactId>
        </dependency>
        <dependency>
            <groupId>com.pepper.bank</groupId>
            <artifactId>pepperbank-utils</artifactId>
        </dependency>

        <!-- DEPENDENCIAS EXTERNAS -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.module</groupId>
            <artifactId>jackson-module-kotlin</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-devtools</artifactId>
            <scope>runtime</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
        </dependency>
        <dependency>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-core</artifactId>
            <version>${liquibase-core.version}</version>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>${project.basedir}/src/main/kotlin</sourceDirectory>
        <testSourceDirectory>${project.basedir}/src/test/kotlin</testSourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>
